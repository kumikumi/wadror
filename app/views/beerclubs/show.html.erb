<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beerclub.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beerclub.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beerclub.city %>
</p>

<% if @beerclub.users.empty? %>
	<p>No members</p>
<% else %>
	<p>Beerclub has <%= pluralize(@beerclub.users.count, "member") %></p>
	
	<ul>
  	<% @beerclub.users.each do |user| %>
    	<li> <%= link_to user.username, user %> </li>
  	<% end %>
	</ul>
	
<% end %>

<%= link_to 'Edit', edit_beerclub_path(@beerclub) %> |
<%= link_to 'Back', beerclubs_path %>
