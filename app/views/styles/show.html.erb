<p id="notice"><%= notice %></p>

<p>
  <h1><%= @style.name %></h1>
</p>

<p>
  <%= @style.description %>
</p>

<p>
  <strong>Beers</strong>
 <% @style.beers.each do |beer| %>
   <li><%= link_to beer.name, beer %> by <%= link_to beer.brewery.name, beer.brewery %></li>
 <% end %>
</p>

<%= link_to 'Edit', edit_style_path(@style) if current_user %> 
<%= link_to 'Destroy', @style, method: :delete, data: { confirm: 'Are you sure?' } if current_user %>
